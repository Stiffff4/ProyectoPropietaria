@model ProyectoPropietaria.ViewModels.ProductosViewModel
@using ProyectoPropietaria.Resources;

@{
    ViewData["Title"] = "Delete";
}

<h1>@StringResource.Delete</h1>

<h3>@StringResource.SureDelete</h3>
<div>
    <h4>@StringResource.Products</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @StringResource.Name
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Producto.Nombre)
        </dd>
        <dt class="col-sm-2">
            @StringResource.Description
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Producto.Descripcion)
        </dd>
        <dt class="col-sm-2">
            @StringResource.Price
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Producto.Precio)
        </dd>
        <dt class="col-sm-2">
            @StringResource.CreationDate
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Producto.FechaCreado)
        </dd>
        <dt class="col-sm-2">
            @StringResource.CategoryID
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Producto.Categoria.CategoriaId)
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="Producto.ProductoId" />
        <input type="submit" value="@StringResource.Delete" class="btn btn-danger" /> |
        <a asp-action="Index">@StringResource.BackToList</a>
    </form>
</div>
