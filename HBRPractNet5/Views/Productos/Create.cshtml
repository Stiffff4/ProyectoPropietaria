@model ProyectoPropietaria.ViewModels.ProductosViewModel
@using ProyectoPropietaria.Resources;

@{
    ViewData["Title"] = "Create";
}

<h1>@StringResource.Create</h1>

<h4>@StringResource.Products</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create" id="createForm">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Producto.CategoriaId" class="control-label">@StringResource.CategoryID</label>
                <select asp-for="Producto.CategoriaId" class="form-control" asp-items="ViewBag.CategoriaId"></select>
            </div>
            <div class="form-group">
                <label asp-for="Producto.Nombre" class="control-label">@StringResource.Name</label>
                <input asp-for="Producto.Nombre" class="form-control" />
                <span asp-validation-for="Producto.Nombre" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Producto.Descripcion" class="control-label">@StringResource.Description</label>
                <input asp-for="Producto.Descripcion" class="form-control" />
                <span asp-validation-for="Producto.Descripcion" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Producto.Precio" class="control-label">@StringResource.Price</label>
                <input asp-for="Producto.Precio" class="form-control" />
                <span asp-validation-for="Producto.Precio" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Producto.FechaCreado" class="control-label">@StringResource.CreationDate</label>
                <input asp-for="Producto.FechaCreado" class="form-control" />
                <span asp-validation-for="Producto.FechaCreado" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="@StringResource.Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">@StringResource.BackToList</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script src="~/js/Productos/Valid.js"></script>
}

