@model IEnumerable<ProyectoPropietaria.ViewModels.UsuariosViewModel>
@using ProyectoPropietaria.Resources;

@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
}


<h1>@StringResource.User</h1>

<p>
    <a asp-action="Create">@StringResource.Create</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Usuario.Username)
            </th>
            <th>
                @StringResource.Password
            </th>
            <th>
                @StringResource.IsAdmin
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Usuario.Username)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Usuario.Password)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Usuario.IsAdmin)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Usuario.UsuarioId">@StringResource.Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.Usuario.UsuarioId">@StringResource.Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.Usuario.UsuarioId">@StringResource.Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>