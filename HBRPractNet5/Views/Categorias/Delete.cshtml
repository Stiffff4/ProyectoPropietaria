@model ProyectoPropietaria.ViewModels.CategoriasViewModel
@using ProyectoPropietaria.Resources;

@{
    ViewData["Title"] = "Delete";
}

<h1>@StringResource.Delete</h1>

<h3>@StringResource.SureDelete</h3>
<div>
    <h4>@StringResource.Categories</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @StringResource.Name
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Categoria.Nombre)
        </dd>
        <dt class="col-sm-2">
            @StringResource.Description
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Categoria.Descripcion)
        </dd>
        <dt class="col-sm-2">
            @StringResource.CreationDate
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Categoria.FechaCreado)
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="Categoria.CategoriaId" />
        <input type="submit" value="@StringResource.Delete" class="btn btn-danger" /> |
        <a asp-action="Index">@StringResource.BackToList</a>
    </form>
</div>
